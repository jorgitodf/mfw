{% extends "templates/layout.html.twig" %}

{% block title %}{{title}}{% endblock %}

{% block content %}
<div class="container col-md-9" id="div-principal-conta">
    <div class="row ">
        <div class="col-md-11 col-md-offset-1">
            <div class="well well-sm sombra">
            <form class="form-horizontal" role="form" action="{{ base_url() }}/conta/create" method="post" id="formCadConta">
            <fieldset>
                <legend class="text-center">Cadastro de Conta</legend>
     
                <div class="form-group">
                    <label class="col-sm-2 control-label tam-fonte" for="codigo_agencia">Código da Agência:</label>
                    <div class="col-sm-4">
                        <input type="text" id="codigo_agencia" name="codigo_agencia" placeholder="Código da Agência" class="form-control remove-color-input white" autofocus="autofocus" disabled="disabled">
                    </div>

                    <label class="col-sm-2 control-label tam-fonte" for="digito_verificador_agencia">Dígito Agência:</label>
                    <div class="col-sm-4">
                        <input type="text" id="digito_verificador_agencia" name="digito_verificador_agencia" placeholder="Dígito verificador da Agência" class="form-control remove-color-input white" disabled="disabled">
                        <input type="hidden" name="_csrf_token" id="_csrf_token" value="{{ csrf_token() }}" />   
                        <input type="hidden" name="_has_conta" id="_has_conta" value="{{ hasConta() }}" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label tam-fonte" for="numero_conta">Número da Conta:</label>
                    <div class="col-sm-4">
                        <input type="text" id="numero_conta" name="numero_conta" placeholder="Número da Conta" class="form-control remove-color-input white" disabled="disabled">
                    </div>

                    <label class="col-sm-2 control-label tam-fonte" for="digito_verificador_conta">Dígito da Conta:</label>
                    <div class="col-sm-4">
                        <input type="text" id="digito_verificador_conta" name="digito_verificador_conta" placeholder="Dígito verificador da Conta" class="form-control remove-color-input white" disabled="disabled">
                    </div>
                </div>
        
                <div class="form-group">
                    <label class="col-sm-2 control-label tam-fonte" for="codigo_operacao">Código da Operação:</label>
                    <div class="col-sm-4">
                        <input type="text" id="codigo_operacao" name="codigo_operacao" placeholder="Código da Operação" class="form-control remove-color-input white" disabled="disabled">
                    </div>

                    <label class="col-sm-2 control-label tam-fonte" for="tipo_conta">Tipo de Conta:</label>
                    <div class="col-sm-4">
                        <select class="form-control" name="tipo_conta" id="tipo_conta" disabled="disabled"/>
                            <option></option>
                                {% for tipo in tipo_conta %}
                                <option value="{{ tipo.id }}">{{ tipo.tipo_conta }}</option>
                                {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label tam-fonte" for="banco">Banco:</label>
                    <div class="col-sm-4">
                        <select class="form-control" name="banco" id="banco" disabled="disabled"/>
                            <option></option>
                                {% for b in bancos %}
                                <option value="{{ b.id }}">{{ b.cod_banco }} - {{ b.nome_banco }}</option>
                                {% endfor %}
                        </select>
                    </div>
                </div
        
                <!-- Form actions -->
                <div class="form-group">
                    <div class="col-md-4 col-md-offset-2 text-left">
                        <button type="button" class="btn btn-primary btn-md" id="btn-nov-conta">Novo</button>
                        <button type="submit" class="btn btn-primary btn-md" id="btn-cad-conta" disabled>Cadastrar</button>
                    </div>
                    <div class="col-md-4 col-md-offset-1 text-left" id="div-msg-cadastro-conta">
                        <span class='alert alert-success msgSuccess' id='span-success-cadastro-conta'>Sucesso </span>
                    </div>
                </div>
            </fieldset>
            </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}