{% extends "templates/layout.html.twig" %}

{% block title %}{{title}}{% endblock %}

{% block content %}
<div class="container col-md-9 col-sm-9" id="div-principal-form-cad-bandeira">
    <div class="row">
        <div class="col-md-8 col-sm-8 col-md-offset-3 col-sm-offset-3">
            <div class="well well-sm sombra">
            <form class="form-horizontal" role="form" action="{{ base_url() }}/bandeira/create" method="post" id="formCadBandeira">
            <fieldset>
                <legend class="text-center">Cadastro de Bandeira de Cartão de Crédito</legend>
        
                <div class="form-group col-md-12 col-sm-12">
                    <label class="col-md-3 col-sm-3 control-label" for="bandeira">Bandeira</label>
                    <div class="col-md-8 col-sm-8">
                        <input id="bandeira" name="bandeira" type="text" placeholder="Nome da Bandeira" class="form-control remove-color-input white" autofocus="autofocus" disabled="disabled">
                        <input type="hidden" name="_csrf_token" id="_csrf_token" value="{{ csrf_token() }}" />   
                        <input type="hidden" name="_has_conta" id="_has_conta" value="{{ hasConta() }}" />
                    </div>
                </div>
        
                <!-- Form actions -->
                <div class="form-group col-md-12 col-sm-12">
                    <div class="col-md-4 col-sm-4 col-md-offset-3 col-sm-offset-3 text-left" id="div_but_ban">
                        <button type="button" class="btn btn-primary btn-md" id="btn-nov-ban">Novo</button>
                        <button type="submit" class="btn btn-primary btn-md" id="btn-cad-ban" disabled>Cadastrar</button>
                    </div>
                    <div class="col-md-4 col-sm-4" id="div_msg_cadastro_bandeira">
                        
                    </div>
                </div>

            </fieldset>
            </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}